model AuthToken {
  id        String   @id @default(uuid())
  User      Users    @relation(fields: [usersId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime @default(now())
  usersId   String
}
